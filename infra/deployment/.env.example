# Surgify Platform - Environment Configuration
# Copy this to .env and customize for your environment

# Core Application Settings
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=4

# API Configuration
API_TITLE="Surgify - Real-Time Case Data Manager"
API_VERSION=2.1.0
API_PREFIX=/api/v1
PWA_NAME="Surgify Platform"

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/surgify_dev
# Alternative for development
# DATABASE_URL=sqlite:///data/database/surgify.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
CACHE_TTL=3600

# Security Configuration (CHANGE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-min-32-chars-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-32-bytes-change-in-production
TOKEN_EXPIRE_MINUTES=1440
SESSION_EXPIRE_HOURS=24

# CORS and Security
CORS_ORIGINS=http://localhost:8000,http://localhost:3000,http://127.0.0.1:8000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
TRUSTED_HOSTS=localhost,127.0.0.1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/surgify.log
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_REDOC=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_TEAM_FEATURES=true
ENABLE_NOTIFICATIONS=true
ENABLE_AI_FEATURES=true
ENABLE_CACHE=true

# Real-Time Features
WEBSOCKET_ENABLED=true
WEBSOCKET_PATH=/ws
NOTIFICATION_QUEUE_SIZE=1000

# File Upload Settings
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,csv,xlsx

# External Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# AI/ML Configuration
HUGGINGFACE_API_TOKEN=your-hf-token-here
OPENAI_API_KEY=your-openai-key-here
AI_MODEL_CACHE_DIR=./model_cache
AI_CONFIDENCE_THRESHOLD=0.8

# Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
PUSH_NOTIFICATIONS_ENABLED=true

# Monitoring & Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Development Settings
RELOAD=true
DEBUG_TOOLBAR=true
PROFILER_ENABLED=false

# Production Settings (override in production)
APP_REPLICAS=3
WORKER_REPLICAS=2
MAX_REQUESTS=1000
PRELOAD_APP=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/app/backups
