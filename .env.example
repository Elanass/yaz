# Example Environment Configuration
# Copy this to deployment/{env}/.env and configure for your environment

ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/gastric_adci
ELECTRICSQL_URL=ws://localhost:5133

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=your-secret-key-32-chars-minimum
JWT_SECRET=your-jwt-secret-32-chars-minimum
CLINICAL_DATA_ENCRYPTION_KEY=your-clinical-key-32-chars-minimum

# CORS
CORS_ORIGINS=["http://localhost:8000"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# IPFS
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# Monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
