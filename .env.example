# Environment Configuration
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://gastric_user:secure_password@localhost:5432/gastric_adci_db
ELECTRICSQL_URL=ws://localhost:5133
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Security
SECRET_KEY=your-super-secure-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
PASSWORD_SALT_ROUNDS=12

# CORS
CORS_ORIGINS=["http://localhost:8000", "http://localhost:3000", "https://gastric-adci.health"]

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# IPFS
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# Clinical Decision Engines
ADCI_ENGINE_ENDPOINT=https://api.adci.health/v1
ADCI_API_KEY=your-adci-api-key
CLINICAL_DATA_ENCRYPTION_KEY=your-clinical-encryption-key

# Audit and Compliance
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for HIPAA
ENABLE_AUDIT_LOGGING=True
GDPR_COMPLIANCE_MODE=True
HIPAA_COMPLIANCE_MODE=True

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=notifications@gastric-adci.health
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@gastric-adci.health

# Monitoring and Analytics
PROMETHEUS_METRICS_PORT=9090
ENABLE_METRICS=True
SENTRY_DSN=your-sentry-dsn

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=["pdf", "jpg", "jpeg", "png", "dicom"]

# PWA Configuration
PWA_NAME=Gastric ADCI Platform
PWA_SHORT_NAME=ADCI
PWA_DESCRIPTION=Gastric Oncology-Surgery Decision Support
PWA_THEME_COLOR=#2563eb
PWA_BACKGROUND_COLOR=#ffffff

# Google Cloud (for production)
GOOGLE_CLOUD_PROJECT=gastric-adci-platform
GOOGLE_CLOUD_REGION=us-central1
CLOUD_SQL_CONNECTION_NAME=your-project:region:instance

# Clinical Settings
DEFAULT_CONFIDENCE_THRESHOLD=0.75
ENABLE_EXPERIMENTAL_FEATURES=False
CLINICAL_TRIAL_MODE=False
