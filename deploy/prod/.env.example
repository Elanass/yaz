# Production Environment Configuration

# Application settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING
API_TITLE=Gastric ADCI Platform
API_VERSION=3.0
PWA_NAME=Gastric ADCI Platform

# Deployment settings
APP_REPLICAS=2
WORKER_REPLICAS=2
API_WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
KEEPALIVE=65

# Database (production - set these in your deployment)
DATABASE_URL=postgresql+asyncpg://prod_user:CHANGE_ME@db:5432/gastric_adci_prod
ELECTRICSQL_URL=wss://electric:5133
ELECTRICSQL_TOKEN=prod_token
ELECTRICSQL_SECURE=true
ELECTRIC_DATABASE_ID=prod-database-id
ELECTRIC_TOKEN=prod-electric-token

# Security (CHANGE ALL THESE IN PRODUCTION!)
SECRET_KEY=CHANGE-ME-PRODUCTION-SECRET-32-CHARS
JWT_SECRET=CHANGE-ME-PRODUCTION-JWT-SECRET-32
CLINICAL_DATA_ENCRYPTION_KEY=CHANGE-ME-CLINICAL-ENCRYPTION-32
PATIENT_DATA_ENCRYPTION=true
ENABLE_AUDIT_LOGGING=true
DATA_RETENTION_DAYS=730  # 2 years

# CORS (restrict to your domain)
CORS_ORIGINS=["https://your-domain.com"]
ALLOWED_HOSTS=["your-domain.com","your-api-domain.com"]

# Redis (production)
REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600

# IPFS (production)
IPFS_API_URL=http://ipfs:5001
IPFS_GATEWAY_URL=http://ipfs:8080

# Monitoring (configure in production)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# ADCI Engine settings
ADCI_CONFIDENCE_THRESHOLD_HIGH=0.85
ADCI_CONFIDENCE_THRESHOLD_MEDIUM=0.70
ADCI_CONFIDENCE_THRESHOLD_LOW=0.50

# FLOT Protocol settings
FLOT_PROTOCOL_VERSION=3.0-Precision

# Scaling settings
SYNC_INTERVAL_MS=5000
OFFLINE_STORAGE_MB=100
MAX_REQUEST_SIZE_MB=50

# Application scaling
WORKERS=4  # Number of Uvicorn workers
HOST=0.0.0.0
PORT=8000
