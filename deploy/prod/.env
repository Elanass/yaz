# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Database (production - set these in your deployment)
DATABASE_URL=postgresql+asyncpg://prod_user:CHANGE_ME@your-db-host:5432/gastric_adci_prod
ELECTRICSQL_URL=wss://your-electric-host:5133

# Security (CHANGE ALL THESE IN PRODUCTION!)
SECRET_KEY=CHANGE-ME-PRODUCTION-SECRET-32-CHARS
JWT_SECRET=CHANGE-ME-PRODUCTION-JWT-SECRET-32
CLINICAL_DATA_ENCRYPTION_KEY=CHANGE-ME-CLINICAL-ENCRYPTION-32

# CORS (restrict to your domain)
CORS_ORIGINS=["https://your-domain.com"]
ALLOWED_HOSTS=["your-domain.com","your-api-domain.com"]

# Redis (production)
REDIS_URL=redis://your-redis-host:6379/0
CACHE_TTL=3600

# IPFS (production)
IPFS_API_URL=https://your-ipfs-node:5001
IPFS_GATEWAY_URL=https://your-ipfs-gateway:8080

# Monitoring (configure in production)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
NEW_RELIC_LICENSE_KEY=your-new-relic-key
