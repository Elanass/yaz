# YAZ Platform Environment Configuration

# Core Application
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8000

# App Configuration
YAZ_DEFAULT_APP=core
YAZ_APPS_PREFIX=/apps

# Security
SECRET_KEY=surgify_dev_secret_key_2025
JWT_SECRET=surgify_dev_jwt_secret_2025
TOKEN_EXPIRE_MINUTES=1440

# Database
DATABASE_URL=sqlite:///data/database/surgify.db

# CORS Settings
CORS_ORIGINS=http://localhost:6379,http://localhost:3000,http://127.0.0.1:6379

# Performance
WORKERS=4

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_DOCS=true
ENABLE_METRICS=true
ENABLE_SWAGGER=true
ENABLE_RESPONSE_COMPRESSION=true
ENABLE_REAL_TIME_COLLABORATION=true

# Deployment
APP_REPLICAS=1
WORKER_REPLICAS=1
API_WORKERS=4
MAX_REQUESTS=1000
