{
  "template_id": "gastric-post-surgery-followup",
  "template_name": "Gastric Surgery Post-Operative Follow-up",
  "template_version": "1.0",
  "clinical_domain": "gastric_oncology",
  "description": "Structured template for post-gastrectomy follow-up assessment",
  "sections": [
    {
      "section_id": "visit_details",
      "section_name": "Visit Details",
      "required": true,
      "fields": [
        {
          "field_id": "visit_date",
          "field_name": "Visit Date",
          "field_type": "date",
          "required": true
        },
        {
          "field_id": "visit_type",
          "field_name": "Visit Type",
          "field_type": "select",
          "required": true,
          "options": ["In-person", "Telehealth", "Home visit"]
        },
        {
          "field_id": "weeks_post_surgery",
          "field_name": "Weeks Post-Surgery",
          "field_type": "number",
          "required": true,
          "validation": {
            "min": 0,
            "max": 520
          },
          "calculated": true
        },
        {
          "field_id": "provider",
          "field_name": "Provider",
          "field_type": "select",
          "required": true,
          "options": ["Surgeon", "Oncologist", "Advanced Practice Provider", "Primary Care", "Other"]
        }
      ]
    },
    {
      "section_id": "surgical_procedure",
      "section_name": "Surgical Procedure Summary",
      "required": true,
      "fields": [
        {
          "field_id": "procedure_performed",
          "field_name": "Procedure Performed",
          "field_type": "select",
          "required": true,
          "options": [
            "Total gastrectomy", 
            "Subtotal gastrectomy", 
            "Proximal gastrectomy", 
            "Distal gastrectomy", 
            "Extended gastrectomy",
            "Palliative procedure"
          ]
        },
        {
          "field_id": "procedure_date",
          "field_name": "Procedure Date",
          "field_type": "date",
          "required": true
        },
        {
          "field_id": "lymphadenectomy",
          "field_name": "Lymphadenectomy Performed",
          "field_type": "select",
          "required": true,
          "options": ["D0", "D1", "D1+", "D2", "D2+", "D3"]
        },
        {
          "field_id": "approach",
          "field_name": "Surgical Approach",
          "field_type": "select",
          "required": true,
          "options": ["Open", "Laparoscopic", "Robotic", "Laparoscopic-assisted", "Robotic-assisted", "Converted to open"]
        },
        {
          "field_id": "reconstruction",
          "field_name": "Reconstruction Method",
          "field_type": "select",
          "required": true,
          "options": [
            "Billroth I", 
            "Billroth II", 
            "Roux-en-Y", 
            "Jejunal interposition", 
            "Esophagogastrostomy",
            "Double tract",
            "Other"
          ]
        }
      ]
    },
    {
      "section_id": "pathology_summary",
      "section_name": "Pathology Summary",
      "required": true,
      "fields": [
        {
          "field_id": "path_t",
          "field_name": "Pathologic T Stage",
          "field_type": "select",
          "required": true,
          "options": ["Tx", "T0", "Tis", "T1a", "T1b", "T2", "T3", "T4a", "T4b"],
          "codingSystem": "AJCC 8th"
        },
        {
          "field_id": "path_n",
          "field_name": "Pathologic N Stage",
          "field_type": "select",
          "required": true,
          "options": ["Nx", "N0", "N1", "N2", "N3a", "N3b"],
          "codingSystem": "AJCC 8th"
        },
        {
          "field_id": "path_m",
          "field_name": "Pathologic M Stage",
          "field_type": "select",
          "required": true,
          "options": ["M0", "M1"],
          "codingSystem": "AJCC 8th"
        },
        {
          "field_id": "margins",
          "field_name": "Resection Margins",
          "field_type": "select",
          "required": true,
          "options": ["R0 - negative margins", "R1 - microscopic positive margins", "R2 - macroscopic positive margins"]
        },
        {
          "field_id": "lymph_nodes_harvested",
          "field_name": "Lymph Nodes Harvested",
          "field_type": "number",
          "required": true,
          "validation": {
            "min": 0,
            "max": 100
          }
        },
        {
          "field_id": "lymph_nodes_positive",
          "field_name": "Lymph Nodes Positive",
          "field_type": "number",
          "required": true,
          "validation": {
            "min": 0,
            "max": 100
          }
        },
        {
          "field_id": "lymph_node_ratio",
          "field_name": "Lymph Node Ratio",
          "field_type": "number",
          "required": true,
          "validation": {
            "min": 0,
            "max": 1
          },
          "calculated": true,
          "calculation": "lymph_nodes_positive / lymph_nodes_harvested"
        }
      ]
    },
    {
      "section_id": "postop_complications",
      "section_name": "Post-Operative Complications",
      "required": true,
      "fields": [
        {
          "field_id": "clavien_dindo",
          "field_name": "Highest Clavien-Dindo Grade",
          "field_type": "select",
          "required": true,
          "options": ["None", "Grade I", "Grade II", "Grade IIIa", "Grade IIIb", "Grade IVa", "Grade IVb", "Grade V"],
          "optionDescriptions": [
            "No complications",
            "Any deviation from normal postop course without need for pharmacological treatment beyond antiemetics, antipyretics, analgesics, diuretics, electrolytes, physiotherapy",
            "Requiring pharmacological treatment with drugs other than those allowed for grade I",
            "Requiring surgical, endoscopic or radiological intervention not under general anesthesia",
            "Requiring surgical, endoscopic or radiological intervention under general anesthesia",
            "Life-threatening complication requiring ICU management - single organ dysfunction",
            "Life-threatening complication requiring ICU management - multi-organ dysfunction",
            "Death of patient"
          ]
        },
        {
          "field_id": "complication_types",
          "field_name": "Complication Types",
          "field_type": "multi-select",
          "required": false,
          "options": [
            "Anastomotic leak", 
            "Wound infection", 
            "Intra-abdominal abscess", 
            "Bleeding", 
            "Pneumonia",
            "Cardiac complication",
            "Dumping syndrome",
            "Delayed gastric emptying",
            "Ileus",
            "Duodenal stump leak",
            "Thromboembolism",
            "Urinary tract infection",
            "Other",
            "None"
          ]
        },
        {
          "field_id": "readmission",
          "field_name": "Readmission within 30 days",
          "field_type": "boolean",
          "required": true
        },
        {
          "field_id": "readmission_reason",
          "field_name": "Readmission Reason",
          "field_type": "text",
          "required": false,
          "dependsOn": {
            "field": "readmission",
            "values": [true]
          }
        },
        {
          "field_id": "reoperation",
          "field_name": "Reoperation Required",
          "field_type": "boolean",
          "required": true
        },
        {
          "field_id": "reoperation_reason",
          "field_name": "Reoperation Reason",
          "field_type": "text",
          "required": false,
          "dependsOn": {
            "field": "reoperation",
            "values": [true]
          }
        }
      ]
    },
    {
      "section_id": "current_status",
      "section_name": "Current Status",
      "required": true,
      "fields": [
        {
          "field_id": "weight",
          "field_name": "Current Weight",
          "field_type": "number",
          "required": true,
          "unit": "kg",
          "validation": {
            "min": 30,
            "max": 250
          }
        },
        {
          "field_id": "weight_change",
          "field_name": "Weight Change from Pre-Op",
          "field_type": "number",
          "required": true,
          "unit": "%",
          "validation": {
            "min": -50,
            "max": 50
          },
          "calculated": true
        },
        {
          "field_id": "performance_status",
          "field_name": "ECOG Performance Status",
          "field_type": "select",
          "required": true,
          "options": ["0", "1", "2", "3", "4"],
          "optionDescriptions": [
            "Fully active",
            "Restricted but ambulatory",
            "Ambulatory but unable to work",
            "Limited self-care",
            "Completely disabled"
          ],
          "codingSystem": "ECOG"
        },
        {
          "field_id": "pain_score",
          "field_name": "Pain Score (0-10)",
          "field_type": "number",
          "required": true,
          "validation": {
            "min": 0,
            "max": 10
          }
        },
        {
          "field_id": "pain_location",
          "field_name": "Pain Location",
          "field_type": "multi-select",
          "required": false,
          "options": [
            "Incision site", 
            "Epigastric", 
            "Diffuse abdominal", 
            "Back", 
            "Chest",
            "Other",
            "None"
          ],
          "dependsOn": {
            "field": "pain_score",
            "condition": "> 0"
          }
        }
      ]
    },
    {
      "section_id": "nutritional_assessment",
      "section_name": "Nutritional Assessment",
      "required": true,
      "fields": [
        {
          "field_id": "oral_intake",
          "field_name": "Current Oral Intake",
          "field_type": "select",
          "required": true,
          "options": [
            "Normal diet", 
            "Soft diet", 
            "Liquid diet", 
            "Minimal intake",
            "Parenteral nutrition dependent",
            "Enteral nutrition dependent",
            "Combination"
          ]
        },
        {
          "field_id": "portion_size",
          "field_name": "Typical Portion Size",
          "field_type": "select",
          "required": true,
          "options": ["Normal", "3/4 of normal", "1/2 of normal", "1/4 of normal", "Minimal"]
        },
        {
          "field_id": "meal_frequency",
          "field_name": "Meal Frequency",
          "field_type": "select",
          "required": true,
          "options": ["3 meals/day", "4-5 meals/day", "6+ meals/day", "Irregular/unable to tolerate"]
        },
        {
          "field_id": "nutritional_symptoms",
          "field_name": "Nutritional Symptoms",
          "field_type": "multi-select",
          "required": true,
          "options": [
            "Early satiety", 
            "Nausea", 
            "Vomiting", 
            "Reflux", 
            "Dumping syndrome",
            "Diarrhea",
            "Constipation",
            "Dysphagia",
            "Taste changes",
            "Anorexia",
            "None"
          ]
        },
        {
          "field_id": "albumin",
          "field_name": "Serum Albumin",
          "field_type": "number",
          "required": false,
          "unit": "g/dL",
          "validation": {
            "min": 1.0,
            "max": 6.0
          }
        },
        {
          "field_id": "supplements",
          "field_name": "Nutritional Supplements",
          "field_type": "multi-select",
          "required": true,
          "options": [
            "Oral nutritional supplements", 
            "Enteral tube feeding", 
            "Parenteral nutrition", 
            "Vitamin B12", 
            "Iron",
            "Calcium",
            "Vitamin D",
            "Multivitamin",
            "Other",
            "None"
          ]
        }
      ]
    },
    {
      "section_id": "functional_assessment",
      "section_name": "Functional Assessment",
      "required": true,
      "fields": [
        {
          "field_id": "activity_level",
          "field_name": "Activity Level",
          "field_type": "select",
          "required": true,
          "options": [
            "Normal activity", 
            "Mild restriction", 
            "Moderate restriction", 
            "Severe restriction",
            "Bedridden"
          ]
        },
        {
          "field_id": "return_to_work",
          "field_name": "Return to Work Status",
          "field_type": "select",
          "required": true,
          "options": [
            "Returned full-time", 
            "Returned part-time", 
            "Not yet returned", 
            "Unable to return",
            "Retired",
            "Not applicable"
          ]
        },
        {
          "field_id": "adl_independence",
          "field_name": "ADL Independence",
          "field_type": "select",
          "required": true,
          "options": [
            "Fully independent", 
            "Needs assistance with some ADLs", 
            "Needs assistance with most ADLs", 
            "Fully dependent"
          ]
        },
        {
          "field_id": "exercise_tolerance",
          "field_name": "Exercise Tolerance",
          "field_type": "select",
          "required": true,
          "options": [
            "Normal", 
            "Able to walk >1km", 
            "Able to walk 500m-1km", 
            "Able to walk <500m",
            "Household ambulation only",
            "Minimal ambulation"
          ]
        }
      ]
    },
    {
      "section_id": "adjuvant_therapy",
      "section_name": "Adjuvant Therapy",
      "required": true,
      "fields": [
        {
          "field_id": "adjuvant_recommended",
          "field_name": "Adjuvant Therapy Recommended",
          "field_type": "boolean",
          "required": true
        },
        {
          "field_id": "adjuvant_type",
          "field_name": "Adjuvant Therapy Type",
          "field_type": "multi-select",
          "required": false,
          "options": ["Chemotherapy", "Radiotherapy", "Chemoradiotherapy", "Immunotherapy", "Targeted therapy", "None"],
          "dependsOn": {
            "field": "adjuvant_recommended",
            "values": [true]
          }
        },
        {
          "field_id": "adjuvant_regimen",
          "field_name": "Adjuvant Regimen",
          "field_type": "select",
          "required": false,
          "options": [
            "FLOT", 
            "XELOX", 
            "FOLFOX", 
            "Capecitabine", 
            "S-1",
            "Nivolumab",
            "Other",
            "Not applicable"
          ],
          "dependsOn": {
            "field": "adjuvant_recommended",
            "values": [true]
          }
        },
        {
          "field_id": "adjuvant_status",
          "field_name": "Adjuvant Therapy Status",
          "field_type": "select",
          "required": false,
          "options": [
            "Not yet started", 
            "In progress", 
            "Completed", 
            "Discontinued",
            "Refused",
            "Not applicable"
          ],
          "dependsOn": {
            "field": "adjuvant_recommended",
            "values": [true]
          }
        },
        {
          "field_id": "adjuvant_tolerance",
          "field_name": "Adjuvant Therapy Tolerance",
          "field_type": "select",
          "required": false,
          "options": [
            "Excellent", 
            "Good", 
            "Fair", 
            "Poor",
            "Not applicable"
          ],
          "dependsOn": {
            "field": "adjuvant_status",
            "values": ["In progress", "Completed", "Discontinued"]
          }
        }
      ]
    },
    {
      "section_id": "surveillance",
      "section_name": "Surveillance",
      "required": true,
      "fields": [
        {
          "field_id": "imaging_performed",
          "field_name": "Imaging Performed",
          "field_type": "multi-select",
          "required": true,
          "options": ["CT scan", "MRI", "PET scan", "Endoscopy", "Ultrasound", "None"]
        },
        {
          "field_id": "imaging_findings",
          "field_name": "Imaging Findings",
          "field_type": "select",
          "required": false,
          "options": [
            "No evidence of disease", 
            "Suspicious for recurrence", 
            "Confirmed recurrence", 
            "Indeterminate",
            "Not applicable"
          ],
          "dependsOn": {
            "field": "imaging_performed",
            "condition": "!= None"
          }
        },
        {
          "field_id": "tumor_markers",
          "field_name": "Tumor Markers",
          "field_type": "multi-select",
          "required": true,
          "options": ["CEA", "CA 19-9", "CA 72-4", "Other", "None"]
        },
        {
          "field_id": "marker_trend",
          "field_name": "Tumor Marker Trend",
          "field_type": "select",
          "required": false,
          "options": [
            "Normal/stable", 
            "Increasing", 
            "Decreasing", 
            "Fluctuating",
            "Not applicable"
          ],
          "dependsOn": {
            "field": "tumor_markers",
            "condition": "!= None"
          }
        },
        {
          "field_id": "recurrence_status",
          "field_name": "Recurrence Status",
          "field_type": "select",
          "required": true,
          "options": [
            "No evidence of disease", 
            "Suspected recurrence", 
            "Confirmed local recurrence", 
            "Confirmed distant recurrence",
            "Confirmed local and distant recurrence"
          ]
        },
        {
          "field_id": "recurrence_location",
          "field_name": "Recurrence Location",
          "field_type": "multi-select",
          "required": false,
          "options": [
            "Anastomotic site", 
            "Regional lymph nodes", 
            "Peritoneum", 
            "Liver", 
            "Lung",
            "Bone",
            "Other",
            "Not applicable"
          ],
          "dependsOn": {
            "field": "recurrence_status",
            "values": ["Confirmed local recurrence", "Confirmed distant recurrence", "Confirmed local and distant recurrence"]
          }
        }
      ]
    },
    {
      "section_id": "quality_of_life",
      "section_name": "Quality of Life Assessment",
      "required": true,
      "fields": [
        {
          "field_id": "global_qol",
          "field_name": "Global Quality of Life (0-10)",
          "field_type": "number",
          "required": true,
          "validation": {
            "min": 0,
            "max": 10
          }
        },
        {
          "field_id": "symptom_burden",
          "field_name": "Symptom Burden",
          "field_type": "select",
          "required": true,
          "options": ["None", "Mild", "Moderate", "Severe"]
        },
        {
          "field_id": "common_symptoms",
          "field_name": "Common Symptoms",
          "field_type": "multi-select",
          "required": true,
          "options": [
            "Fatigue", 
            "Pain", 
            "Nausea", 
            "Early satiety", 
            "Reflux",
            "Dumping syndrome",
            "Diarrhea",
            "Dysphagia",
            "Insomnia",
            "Anxiety/depression",
            "None"
          ]
        },
        {
          "field_id": "psychological_status",
          "field_name": "Psychological Status",
          "field_type": "select",
          "required": true,
          "options": ["Normal", "Mild anxiety/depression", "Moderate anxiety/depression", "Severe anxiety/depression"]
        },
        {
          "field_id": "supportive_care",
          "field_name": "Supportive Care Needs",
          "field_type": "multi-select",
          "required": true,
          "options": [
            "Nutritional support", 
            "Pain management", 
            "Psychological support", 
            "Social work services", 
            "Physical therapy",
            "Occupational therapy",
            "Home health services",
            "Palliative care",
            "None"
          ]
        }
      ]
    },
    {
      "section_id": "treatment_plan",
      "section_name": "Follow-up Treatment Plan",
      "required": true,
      "fields": [
        {
          "field_id": "plan_summary",
          "field_name": "Plan Summary",
          "field_type": "multi-select",
          "required": true,
          "options": [
            "Continue surveillance", 
            "Initiate/continue adjuvant therapy", 
            "Nutritional intervention", 
            "Symptomatic management", 
            "Treatment for recurrence",
            "Palliative care",
            "Referral to specialist",
            "Clinical trial consideration"
          ]
        },
        {
          "field_id": "next_appointment",
          "field_name": "Next Appointment Timeframe",
          "field_type": "select",
          "required": true,
          "options": ["1-2 weeks", "1 month", "3 months", "6 months", "12 months"]
        },
        {
          "field_id": "next_imaging",
          "field_name": "Next Imaging Timeframe",
          "field_type": "select",
          "required": true,
          "options": ["1 month", "3 months", "6 months", "12 months", "Not indicated"]
        },
        {
          "field_id": "provider_notes",
          "field_name": "Provider Notes",
          "field_type": "text",
          "required": false,
          "maxLength": 2000
        }
      ]
    }
  ],
  "metadata": {
    "created_date": "2023-06-15",
    "last_updated": "2023-11-10",
    "target_user_roles": ["Surgeon", "Oncologist", "Advanced Practice Provider", "Gastroenterologist"],
    "evidence_references": [
      "ESMO Clinical Practice Guidelines for Gastric Cancer (2022)",
      "NCCN Guidelines for Gastric Cancer, Version 2.2023",
      "Japanese Gastric Cancer Treatment Guidelines 2021 (5th edition)"
    ],
    "calculated_fields": ["weeks_post_surgery", "lymph_node_ratio", "weight_change"]
  }
}
