# Gastric ADCI Platform Environment Configuration
# Production settings should be set in environment variables, not in this file

# Core settings
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# API configuration
API_TITLE=Decision Precision in Surgery
API_VERSION=1.0.0
PWA_NAME=Gastric ADCI Platform
API_BASE_URL=http://localhost:8000/api/v1

# Security - Generate new keys for production
SECRET_KEY=YAZMVPSecretKey2025GastricADCI
JWT_SECRET=YAZMVPJWTSecret2025GastricADCI
ENCRYPTION_KEY=YAZMVPEncryptionKey2025GastricADCI
ALGORITHM=HS256
TOKEN_EXPIRE_MINUTES=1440
DEFAULT_CONFIDENCE_THRESHOLD=0.75

# CORS
CORS_ORIGINS=http://localhost:8000,http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Database - Using SQLite for local development
DATABASE_URL=sqlite+aiosqlite:///./gastric_adci.db

# Electric SQL settings
ELECTRICSQL_URL=http://localhost:5133
ELECTRICSQL_TOKEN=dev-token
ELECTRICSQL_SECURE=false
ELECTRIC_DATABASE_ID=dev-database-id
ELECTRIC_TOKEN=dev-electric-token
SYNC_INTERVAL_MS=5000
OFFLINE_STORAGE_MB=100

# IPFS configuration
IPFS_API_URL=http://localhost:5001/api/v0
IPFS_GATEWAY_URL=http://localhost:8080/ipfs

# Compliance settings
FILE_ENCRYPTION_ENABLED=true
PATIENT_DATA_ENCRYPTION=true
ENABLE_AUDIT_LOGGING=true
DATA_RETENTION_DAYS=2555

# Feature flags
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_RESPONSE_COMPRESSION=true
ENABLE_RETROSPECTIVE_ANALYSIS=true
ENABLE_PROSPECTIVE_ANALYSIS=true
ENABLE_FLOT_PROTOCOL=true
ENABLE_ADCI_ENGINE=true
ENABLE_CLINICAL_VALIDATION=true
CLINICAL_TRIAL_MODE=false
ENABLE_SWAGGER=true
STATIC_FILES_MAX_AGE=86400

# Performance settings
WORKERS=1
MAX_REQUEST_SIZE_MB=50

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log
