# Surgify Desktop Application Environment Configuration

# Application Environment
ELECTRON_ENV=development
NODE_ENV=development

# Surgify API Configuration
SURGIFY_API_URL=https://api.surgify.com
SURGIFY_WEB_URL=https://surgify.com
SURGIFY_AUTH_URL=https://auth.surgify.com

# Auto-Update Configuration
AUTO_UPDATE_URL=https://updates.surgify.com
CHECK_UPDATE_ON_START=true
AUTO_DOWNLOAD_UPDATES=true

# Security Configuration
ENABLE_CERTIFICATE_VALIDATION=true
ENABLE_CSP=true
ENABLE_SANDBOXING=true
ENABLE_NODE_INTEGRATION=false

# Development Configuration
DEBUG_MODE=false
ENABLE_DEV_TOOLS=false
HOT_RELOAD=true

# Window Configuration
DEFAULT_WINDOW_WIDTH=1200
DEFAULT_WINDOW_HEIGHT=800
MIN_WINDOW_WIDTH=800
MIN_WINDOW_HEIGHT=600

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/desktop.log
MAX_LOG_SIZE=10MB
MAX_LOG_FILES=5

# Performance Configuration
HARDWARE_ACCELERATION=true
WEBGL_ACCELERATION=true
GPU_SANDBOX=true

# Network Configuration
PROXY_SERVER=
IGNORE_CERTIFICATE_ERRORS=false
DISABLE_WEB_SECURITY=false
