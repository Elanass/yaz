# n8n Environment Configuration
# Copy this file to .env and fill in your actual values

# Surgify API Configuration
SURGIFY_API_BASE_URL=http://localhost:8000
SURGIFY_API_TOKEN=your_api_token_here

# SMTP Configuration for Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Slack Integration (Optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#surgify-notifications

# OpenAI API Configuration (for AI summarization)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4

# Webhook Configuration
WEBHOOK_BASE_URL=http://localhost:5678
CASE_CREATED_WEBHOOK=${WEBHOOK_BASE_URL}/webhook/case-created
DELIVERABLE_READY_WEBHOOK=${WEBHOOK_BASE_URL}/webhook/deliverable-ready
DAILY_DIGEST_WEBHOOK=${WEBHOOK_BASE_URL}/webhook/daily-digest

# Database Configuration (for n8n persistence)
N8N_DB_TYPE=postgresdb
N8N_DB_POSTGRESDB_HOST=localhost
N8N_DB_POSTGRESDB_PORT=5432
N8N_DB_POSTGRESDB_DATABASE=n8n
N8N_DB_POSTGRESDB_USER=n8n_user
N8N_DB_POSTGRESDB_PASSWORD=n8n_password

# Security Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=secure_password_here

# Encryption key for credentials (generate with: openssl rand -base64 32)
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here
